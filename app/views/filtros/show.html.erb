<%- model_class = Filtro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @filtro.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:termino) %>:</strong></dt>
  <dd><%= @filtro.termino %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              filtros_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_filtro_path(@filtro), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              filtro_path(@filtro),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
